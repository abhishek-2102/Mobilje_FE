		<security:form-login login-page="/login_page"
			login-processing-url="/login_success"
			authentication-success-forward-url="/login_success"
			username-parameter="login_email" 
			password-parameter="login_password"
			/>
			
			
		<security:csrf disabled="true" />

	</security:http>

	<security:authentication-manager>
		<security:authentication-provider>
			<security:jdbc-user-service
				data-source-ref="dataStructure"
				users-by-username-query="select email,password,'true' as enabled from register where email=?"
				authorities-by-username-query="select email, role from register  where email =?" />
		</security:authentication-provider>
	</security:authentication-manager>
	
